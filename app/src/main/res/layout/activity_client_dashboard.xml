<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido, Cliente"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panel de Control"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/composeHost"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMyServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mis Planes"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.Button.TonalButton"
            app:icon="@drawable/ic_services"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNewService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cambiar / Adquirir Plan"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.Button.TonalButton"
            app:icon="@drawable/ic_add_service"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPayments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historial de Pagos"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:icon="@drawable/ic_payments"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@color/red_primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCompanions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestionar Acompañantes"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:icon="@drawable/ic_companions"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@color/red_primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSedes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuestras Sedes"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:icon="@drawable/ic_sedes"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@color/red_primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClasses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dash_classes"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:icon="@drawable/ic_launcher_foreground"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@color/red_primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChatbot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dash_chatbot"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:icon="@drawable/ic_chatbot"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@color/red_primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRecords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dash_records"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:icon="@drawable/ic_kg_red"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@color/red_primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notas/Calendario"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:icon="@drawable/ic_calendar_mini_small"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cámara / QR"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:icon="@drawable/ic_camera"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@color/red_primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWeather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clima / Tiempo"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:icon="@drawable/ic_weather"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@color/red_primary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:icon="@drawable/ic_logout_red"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@color/red_primary"/>

    </LinearLayout>
</ScrollView>