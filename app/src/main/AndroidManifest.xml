<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PorVida">
        
        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true" />
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PorVida">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.login.RegisterActivity"
            android:exported="false"
            android:label="Registro"
            android:theme="@style/Theme.PorVida" />
            
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".views.ClientDashboardActivity"
            android:exported="false"
            android:label="Panel de Cliente"
            android:theme="@style/Theme.PorVida" />
        <activity
            android:name=".views.PlanesActivity"
            android:exported="false"
            android:label="Planes"
            android:theme="@style/Theme.PorVida" />
        <activity
            android:name=".views.SedesActivity"
            android:exported="false"
            android:label="Sedes"
            android:theme="@style/Theme.PorVida" />
        <activity
            android:name=".views.CompanionsActivity"
            android:exported="false"
            android:label="Acompañantes"
            android:theme="@style/Theme.PorVida" />
        <activity
            android:name=".views.CheckoutActivity"
            android:exported="false"
            android:label="Pago"
            android:theme="@style/Theme.PorVida" />
        <activity
            android:name=".views.PaymentsActivity"
            android:exported="false"
            android:label="Historial de Pagos"
            android:theme="@style/Theme.PorVida" />
        <activity
            android:name=".views.ClassesActivity"
            android:exported="false"
            android:label="Clases"
            android:theme="@style/Theme.PorVida" />
        <activity
            android:name=".views.ChatbotActivity"
            android:exported="false"
            android:label="Chatbot"
            android:theme="@style/Theme.PorVida" />
        <activity
            android:name=".views.AssistantActivity"
            android:exported="false"
            android:label="Asistente"
            android:theme="@style/Theme.PorVida" />
        <activity
            android:name=".views.ClassDetailActivity"
            android:exported="false"
            android:label="Detalle de Clase"
            android:theme="@style/Theme.PorVida" />
        <activity
            android:name=".views.TrainingRecordsActivity"
            android:exported="false"
            android:label="Récords"
            android:theme="@style/Theme.PorVida" />
        <activity
            android:name=".views.NotesActivity"
            android:exported="false"
            android:label="Notas"
            android:theme="@style/Theme.PorVida" />
        <activity
            android:name=".views.MyPlansActivity"
            android:exported="false"
            android:label="Mis Planes"
            android:theme="@style/Theme.PorVida" />

        <activity
            android:name=".views.CameraActivity"
            android:exported="false"
            android:label="Cámara"
            android:theme="@style/Theme.PorVida" />
        <activity
            android:name=".views.WeatherActivity"
            android:exported="false"
            android:label="Clima"
            android:theme="@style/Theme.PorVida" />

        <!-- Placeholder for Weather API Key; user will supply the value via manifestPlaceholders or string resource -->
        <meta-data
            android:name="WEATHER_API_KEY"
            android:value="${WEATHER_API_KEY}" />

        <receiver
            android:name=".network.OpenAIBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.porvida.OPENAI_REQUEST" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".network.GeminiBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.porvida.GEMINI_REQUEST" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".notifications.AlarmReceiver"
            android:exported="false" />
            
    </application>

</manifest>